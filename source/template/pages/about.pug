                .skills__row
                    h3.h3 Backend
                    ul.skills__list
                        li.skills__item
                            .skills__chart
                            span.skills__name PHP
                        li.skills__item
                            .skills__chart
                            span.skills__name mySQL
                        li.skills__item
                            .skills__chart
                            span.skills__name NodeJS & npm
                        li.skills__item
                            .skills__chart
                            span.skills__name Mongo.db
                .skills__row
                    h3.h3 Workflow
                    ul.skills__list
                        li.skills__item
                            .skills__chart
                            span.skills__name Git
                        li.skills__item
                            .skills__chart
                            span.skills__name gulp
                        li.skills__item
                            .skills__chart
                            span.skills__name Bower
        .map-wrapper
            .map
            .contacts
                h2.h2 Контакты
                ul.contacts-list
                    li.contacts-list__item
